<div class="row">
  <div class="col-md-8">
    <%= form_for @post do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :title, class: "form-control" %>
        <%= field_errors(@post, :title) %>
      </div>

        <div class="form-group">
          <%= form.label :dob %>
          <%= form.text_field :body, class: "form-control" %>
          <%= field_errors(@post, :body) %>
        </div>



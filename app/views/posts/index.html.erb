<h1>Patients List</h1>

<p>
  <%= link_to "New Patient", :new_post, class: "btn btn-primary", role: "button" %>
</p>

<table class="table table-bordered">
  <thead>
    <tr>

      <th>Name</th>
      <th>DOB</th>
      <th>Filename</th>
      <th>EDIT/DEL</th>
    </tr>
  </thead>
  <tbody>
    <% @post.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title, post %>
        </td>
        <td>
          <%=  post.body %>
        </td>

        <% post.documents.each do |document| %>

        <td>
          <%= link_to document.file_filename, attachment_url(document, :file) %>
        </td>
        <% end %>
        <td>
          <%= link_to "Edit Patient", [:edit, post], class: "btn btn-primary" %>
          <%= link_to "Delete Patient", post, data: { method: "delete", confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
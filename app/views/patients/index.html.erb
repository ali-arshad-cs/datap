<h2>Patients List </h2>

<p>
  <%= link_to "Add New Patient", :new_patient, class: "btn btn-primary", role: "button" %>
</p>

<table class="table table-bordered">
  <thead>
    <tr>

      <th>Name</th>
      <th>DOB</th>
      <th>Filename</th>

    </tr>
  </thead>
  <tbody>
    <% current_user.patients.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title, post %>
        </td>
        <td>
          <%=  post.dob %>
        </td>

        <% post.documents.each do |document| %>

        <td>

          <%= link_to document.file_filename, attachment_url(document, :file) %>
        </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-md-8">
    <%= form_for @patient do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :title, class: "form-control" ,placeholder: "John Max" %>
        <%= field_errors(@patient, :title) %>
      </div>

        <div class="form-group">
          <%= form.label :dob %>
          <%= form.text_field :dob, class: "form-control", placeholder: "06/22/1990"%>
          <%= field_errors(@patient, :dob) %>
        </div>


      <!--<div class="form-group">-->
        <!--<%#= form.label :image %>-->
        <!--<p>-->
          <!--<%#= attachment_image_tag @patient, :image, :fill, 60, 60 %>-->
          <!--<%#= form.attachment_field :image %>-->
        <!--</p>-->
        <!--<%#= field_errors(@patient, :image) %>-->
      <!--</div>-->
      <div class="form-group">
        <%= form.label :documents_files, "Documents" %>
        <%= form.attachment_field :documents_files, multiple: true, presigned: true, host: request.base_url %>
        <%#= form.attachment_field :documents_files, multiple: true %>
        <%= field_errors(@patient, :documents_files) %>
      </div>

      <div class="form-group">
        <%= form.submit "Create Patient", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>